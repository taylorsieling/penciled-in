<div uk-grid>
    <div class="uk-width-2-3@m uk-padding-large">
        <div class="uk-container">
            <h1><%= @event.name %></h1>
            <h3>About this Event</h3>
            <p><%= @event.description %></p>
            <br><br>
            <h3>Category</h3>
            <p><%= @event.category.name%></p>
            <br><br>
            <%= link_to('delete event', event_path(@event), method: 'delete') %>
        </div>
    </div>

    <div class="uk-width-1-3@m uk-padding-large">
        <div>
            <h4>Date and Time</h4>
            <p><%= @event.start_date.strftime("%b %d, %Y") %> at <%= @event.start_time.strftime(" %l:%M %p") %> - <%= @event.end_date.strftime("%b %d, %Y") %> at <%= @event.end_time.strftime(" %l:%M %p") %></p>
            <br><br>
            <h4>Location</h4>
            <p><%= @event.location %></p>
        </div>
    </div>
</div>