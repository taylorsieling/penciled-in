<div uk-grid>

    <div class="uk-width-2-3@m uk-padding-large uk-padding-remove-top">
        <div class="uk-container">
            <h1><%= @event.name %></h1>
            <h3>About this Event</h3>
            <p><%= @event.description %></p>
            <br>
            <h3>Category</h3>
            <p><%= @event.category.name%></p><br>
        </div>

        <div uk-grid>
            <% if @event.user == current_user %>
                <div class="uk-child-width-1-2">
                    <%= button_to "Edit Event", edit_event_path(@event), method: :get, class: "uk-button uk-button-secondary" %>
                </div>
                <div class="uk-child-width-1-2">
                    <%= button_to 'Delete Event', @event, method: :delete, data: { confirm: "Are you sure you want to this event?"}, class: "uk-button uk-button-secondary" %></p>
                </div>
            <% end %>
        </div>
    </div>

    <div class="uk-width-1-3@m uk-padding-large uk-padding-remove-top">
        <div>
            <%= link_to "RSVP to this Event", new_event_rsvp_path(@event), class: 'uk-button uk-button-secondary' %>
            <h4>Date and Time</h4>
            <p><%= format_date(@event.start_date) %> at <%= format_time(@event.start_time) %> - <%= format_date(@event.end_date) %> at <%= format_time(@event.end_time) %></p>
            <br>
            <h4>Location</h4>
            <p><%= @event.location %></p>
        </div>
    </div>
</div>

