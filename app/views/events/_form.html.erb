<%= form_for @event do |f| %>

<%= f.label :name %>
<%= f.text_field :name %> <br>

<%= f.label :description %>
<%= f.text_area :description%> <br>

<%= f.label :start_date %>
<%= f.date_field :start_date %> <br>

<%= f.label :end_date %>
<%= f.date_field :end_date %> <br>

<%= f.label :start_time %>
<%= f.time_field :start_time %> <br>

<%= f.label :end_time %>
<%= f.time_field :end_time %> <br>

<%= f.submit %>
<% end %>