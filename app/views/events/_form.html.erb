<%= form_for @event do |f| %>

<%= f.label :name %>
<%= f.text_field :name %> <br>

<%= f.label :description %>
<%= f.text_area :description%> <br>

<%= f.label :location %>
<%= f.text_field :location %> <br>

<%= f.label :start_date %>
<%= f.date_field :start_date %> <br>

<%= f.label :end_date %>
<%= f.date_field :end_date %> <br>

<%= f.label :start_time %>
<%= f.time_field :start_time %> <br>

<%= f.label :end_time %>
<%= f.time_field :end_time %> <br><br>

  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  <%= f.fields_for :category do |c| %>

    <%= c.label :name %>
    <%= c.text_field :name %>

  <% end %>

<%= f.submit %>
<% end %>