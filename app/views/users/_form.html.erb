    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>

  <div class='uk-grid-small' uk-grid>

    <div class="uk-width-1-2@s">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'uk-input' %><br>
    </div><br>

    <div class="uk-width-1-2@s">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'uk-input' %><br>
    </div><br>

    <div class="uk-width-1-2@s">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'uk-input' %><br>
    </div><br>

    <div class="uk-width-1-2@s">
    <%= f.submit class: 'uk-button uk-button-secondary' %>
    </div><br>

  </div>

<% end %>