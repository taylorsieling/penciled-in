<h1> My RSVPs </h1><br>

<div uk-grid>

    <div class="uk-width-1-3@m uk-padding-large uk-padding-remove-top">
        <div>
        <p>Something here</p>
        </div>
    </div>

    <div class="uk-width-2-3@m uk-padding-large uk-padding-remove-top">
        <div class="uk-container">
            <h2>Attending</h2>
            <% @rsvps.each do |r| %>
            <p> <%= r.event.name %> </p>
            <p> <%= r.status %> </p>
            <% end %>
            <h3>Interested</h3>
        </div>
    </div>

</div>