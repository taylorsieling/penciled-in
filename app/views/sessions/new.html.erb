<p><%= flash[:message] if flash[:message] %></p>
<p> <% if @errors %>
<%= @erros %>
<% end %></p>
  
<h1>Login</h1>

<%= render partial: "layouts/errors", locals: {object: @user} %>



    <%= form_for :user do |f| %>

    <div class='uk-grid-small' uk-grid>

        <div class="uk-width-1-3@s">
            <%= f.label :email %>
            <%= f.email_field :email, class: 'uk-input' %> <br>
            <br>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'uk-input' %> <br>
            <br>

            <%= f.submit "Login", class: 'uk-button uk-button-secondary' %>
        
            <h3> Or </h3><br><br>
            <%= button_to "Log in with Google", '/auth/google_oauth2', method: 'get', class: 'uk-button uk-button-secondary'%>

        </div>

    </div>

    <% end %>