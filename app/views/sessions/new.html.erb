    <div uk-grid>

        <div class="uk-width-1-3">
        </div>

        <div class="uk-padding-remove-top uk-align-center uk-width-1-3">

        <h2 class="uk-text-center">Login to your Account</h2><br>

        <%= render partial: "layouts/errors", locals: {object: @user} %>

        <%= form_for :user do |f| %>
            
            <%= f.label :email %>
            <%= f.email_field :email, class: 'uk-input' %> <br>
            <br>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'uk-input' %> <br>
            <br>

            <%= f.submit "Login", class: 'uk-button uk-button-secondary uk-width-1-1' %>

        <% end %>

        <h6 class="uk-text-center"> or </h6>

        <%= button_to "Login with Google", '/auth/google_oauth2', class: 'uk-button uk-button-secondary uk-width-1-1'%>


        </div>

        <div class="uk-width-1-3">
        </div>

